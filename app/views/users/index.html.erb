<main>
  <p id="notice"></p>
  <div class="container px-5 px-sm-0">
    <div class="row">

      <%= render 'books/book', book: @book %>

      <div class="col-md-8 offset-md-1">
        <h2>Users</h2>
        <table class="table">
          <thead>
            <tr>
              <th>image</th>
              <th>name</th>
              <th colspan="3"></th>
            </tr>
          </thead>
          <tbody>
            <tr>
              <td>
                <%= link_to   books_path(@user) do %>
                <%= image_tag @user.get_profile_image(80,80) %>
                <% end %>
              </td>
              <td><%= @user.name %></td>
              <td>
                <%= link_to "Show"   %>
              </td>
            </tr>

          </tbody>
        </table>
      </div>
    </div>
  </div>
</main>