  <div class="container">
    <div class="row">


        <%= render 'book', book: @new_book %>



      <div class="col-md-8 offset-md-1">
        <h2>Book detail</h2>
        <table class="table">
          <tbody>
            <tr>
              <td>
                <%= link_to   books_path(@user) do %>
                <%= image_tag @user.get_profile_image(100,100) %>
                <p><%= @user.name %></p>
                <% end %>
              </td>
              <td>
                <%= @book.title %>
              </td>
              <td><%= @book.body %></td>
              <td>
                <%= link_to "Edit", edit_book_path(@book.id) , class: "btn btn-sm btn-success"  %>
              </td>
              <td>

                  <%= link_to "Destroy", @book , method: :delete , class: "btn btn-sm btn-danger destroy_book_#{@book.id}"  %>

              </td>
            </tr>
          </tbody>
        </table>
      </div>
    </div>
  </div>